<!doctype html>
<html lang="en">
<%- include('layouts/header') -%>
<body>
<header>
    <%- include('layouts/navBar') -%>
</header>

<main class="container-fluid h-100" style="margin-top: 130px; margin-bottom: 60px;">
    <div class="row justify-content-center text-center">
        <div class="col-lg-12 mb-2">
            <h1 class="text-center display-5">Create An Account Or <a href="login.ejs">Login</a></h1>
            <hr class="about-line">
        </div>
        <div class="col-lg-7 mb-3">
            <h2 class="mb-1">Register</h2>
            <form action="">
                <input type="text" name="username" id="username" class="form-control mb-1" placeholder="Enter Username">
                <input type="email" name="email" id="email" class="form-control mb-1" placeholder="Enter Email">
                <select name="role" id="role" class="form-select mb-1">
                    <option value="" selected>Choose A Role</option>
                    <option value="non-profit">Non-Profit</option>
                    <option value="professional">Professional</option>
                    <option value="small-business">Small Business</option>
                </select>
                <input type="password" name="password" id="password" class="form-control mb-1" placeholder="Enter Password">
                <button class="btn btn-primary" type="submit">register</button>
            </form>
        </div>
    </div>
</main>
<%- include('layouts/footer') -%>
</body>
</html>